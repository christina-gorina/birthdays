<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <com.example.birthdays.RoundedImageView
                    android:id="@+id/photo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/fullYears"
                    android:layout_width="wrap_content"
                    android:minWidth="24dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:textAlignment="center"
                    android:layout_gravity="right|bottom"
                    android:background="@drawable/item_photo_radius"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:layout_weight="3">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Осталось" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">


                <ToggleButton
                    android:id="@+id/notification"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_width="32dp"
                    android:layout_height="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/notification_event"
                    android:onClick="onNotificationButtonClick"/>

                <Button
                    android:id="@+id/congratulate"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_width="32dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_local_post_office_black_24dp"
                    android:onClick="onCongratulateButtonClick"/>
            </LinearLayout>
        </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />


</android.support.v7.widget.CardView>